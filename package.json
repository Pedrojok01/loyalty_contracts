  },
  "scripts": {
    "lint": "solhint \"contracts/**/*.sol\"",
    "prettier": "prettier --write --plugin=prettier-plugin-solidity \"**/*.sol\"",
    "compile": "hardhat compile --show-stack-traces",
    "test": "hardhat test --show-stack-traces",
    "deploy": "hardhat run --network polygonMumbai scripts/deploy_RedeemableFactory.ts",
    "flatten": "hardhat flatten-all --show-stack-traces",
    "size": "hardhat size-contracts",
    "doc": "hardhat docgen",
    "cover": "hardhat coverage",
    "slither": "slither . --exclude naming-convention,solc-version,external-function --buidler-ignore-compile"
  },
  "devDependencies": {
    "@ethersproject/abi": "5.7.0",
    "@ethersproject/providers": "5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "2.0.7",
    "@nomicfoundation/hardhat-ethers": "3.0.6",
    "@nomicfoundation/hardhat-network-helpers": "1.0.11",
    "@nomicfoundation/hardhat-toolbox": "4.0.0",
    "@nomicfoundation/hardhat-verify": "2.0.9",
    "@openzeppelin/contracts": "5.0.2",
    "@typechain/ethers-v6": "0.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/chai": "4.3.17",
    "@types/mocha": "10.0.7",
    "@types/node": "20.10.2",
    "chai": "4.3.10",
    "dotenv": "16.4.5",
    "ethers": "6.13.2",
    "hardhat": "2.22.8",
    "hardhat-contract-sizer": "2.10.0",
    "hardhat-gas-reporter": "1.0.8",
    "prettier": "3.3.3",
    "prettier-plugin-solidity": "1.3.1",
    "solhint": "5.0.3",
    "solhint-community": "4.0.0",
    "solhint-plugin-prettier": "0.1.0",
    "solidity-coverage": "0.8.12",
    "ts-node": "10.9.2",
    "typechain": "8.3.2",
    "typescript": "5.5.4"
  }
