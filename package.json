    "solhint": "^4.0.0",
    "solhint-community": "^3.7.0-rc03",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": "10.9.1",
    "typechain": "^8.3.2",
    "typescript": "5.3.2"
  }
